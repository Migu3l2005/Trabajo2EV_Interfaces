<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo para botones sin efecto de hover -->
    <Style x:Key="NoHoverButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
      

        <!-- Triggers para eliminar el hover -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
